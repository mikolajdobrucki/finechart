{
  "name": "finechart",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "dist/index.css"
  ],
  "scripts": {
    "build": "npm run build:css && tsc",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --watch",
    "clean": "rm -rf dist",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/index.css"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "tsup": "^8.0.2",
    "typescript": "^5",
    "tailwindcss": "^3.x",
    "autoprefixer": "^10.x",
    "postcss": "^8.x"
  },
  "description": "Simple but pretty charts for React and more.",
  "author": "mikolajdobrucki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikolajdobrucki/finechart"
  }
}
